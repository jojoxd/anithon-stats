{
  "name": "anilist",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/anilist/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:swc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "libs/anilist/dist",
        "tsConfig": "libs/anilist/tsconfig.lib.json",
        "packageJson": "libs/anilist/package.json",
        "main": "libs/anilist/src/index.ts",
        "assets": [
          "libs/anilist/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/anilist/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/anilist/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
