{
  "name": "@anime-rss-filter/anilist",
  "version": "0.0.1",
  "license": "MIT",
  "peerDependencies": {
    "@tsed/common": "7.5.2",
    "@tsed/di": "7.5.2",
    "node-fetch": "^3.0.0-beta.4"
  },
  "dependencies": {
    "apollo-boost": "^0.4.7",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-link-http": "^1.5.16",
    "gql-tag": "^1.0.1",
    "graphql": "^15.8.0"
  },
  "devDependencies": {
    "@jojoxd/tsconfig": "1.1.3",
    "@tsed/cli-plugin-mocha": "4.2.3",
    "@tsed/common": "7.5.2",
    "@tsed/di": "7.5.2",
    "@tsed/platform-cache": "7.5.2",
    "@types/chai": "4.3.4",
    "@types/chai-as-promised": "7.1.5",
    "@types/express": "^4.17.4",
    "@types/mocha": "7.0.2",
    "@types/sinon": "7.5.2",
    "@types/sinon-chai": "3.2.3",
    "@types/supertest": "2.0.12",
    "apollo": "^2.33.11",
    "chai": "4.3.7",
    "chai-as-promised": "7.1.1",
    "cross-env": "7.0.3",
    "express": "^4.17.1",
    "mocha": "7.2.0",
    "node-fetch": "^3.0.0-beta.4",
    "nyc": "15.1.0",
    "sinon": "9.0.1",
    "sinon-chai": "3.5.0",
    "supertest": "4.0.2",
    "tslint": "^6.1.1",
    "tsup": "^5.12.6",
    "typescript": "^4.3.5"
  },
  "resolutions": {
    "graphql": "^15.8.0"
  },
  "scripts": {
    "build:package-anilist": "yarn clean && yarn tsc",
    "clean:package-anilist": "yarn clean",
    "watch:package-anilist": "yarn build:package-anilist --watch",
    "clean": "rm dist -rf && echo 'Cleaned package-anilist'",
    "tsc": "tsup index.ts --out-dir dist --format cjs,esm --dts ",
    "update-schema": "apollo client:download-schema --endpoint=https://graphql.anilist.co schema.json",
    "apollo:codegen": "apollo codegen:generate --localSchemaFile=schema.json --target=typescript --includes=\"src/gql/**/*.gql.ts\" --tagName=gql --addTypename --outputFlat src/generated/types.ts",
    "test": "yarn test:lint && yarn test:coverage",
    "test:unit": "cross-env NODE_ENV=test mocha --reporter=mocha-junit-reporter",
    "test:coverage": "cross-env NODE_ENV=test nyc -- mocha --reporter=mocha-junit-reporter",
    "test:lint": "tslint --project tsconfig.json",
    "test:lint:fix": "tslint --project tsconfig.json --fix"
  },
  "main": "dist/index.js"
}
