{
  "extends": "@jojoxd/tsconfig/config/base.json",

  "compilerOptions": {
    "declaration": false,
    "importHelpers": true,
    "newLine": "LF",
    "noEmit": true,
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es7",
      "esnext.asynciterable",
      "dom"
    ],
    "preserveSymlinks": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "./index.ts"
  ],

  "include": [
    "./src/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
